                    </ul>
                </div>
            </div>
        </nav>

    {% endblock %}

    {% block header %}
        <div id="header" class="card text-center">
            <h1>PBSoft</h1>
        </div>
    {% endblock %}

    {% block body %}
    {% endblock %}

    <footer>
        <div class="container">
            {#{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <span>Connecté en tant que {{ app.user.username|title }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></span>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">Connexion</a>
            {% endif %}#}

            <p>Dushow Toulouse Transport © {{ 'now'|date('Y') }} and beyond.</p>
        </div>
