{% extends 'layout.html.twig' %}

{% block title %}QrCodes{% endblock %}

{% block header %}
    <div id="header" class="card text-center">
        {% if 'm250' in cat %}{% set titre = 'moteurs 250kg' %}{% endif %}
        {% if 'm500' in cat %}{% set titre = 'moteurs 500kg' %}{% endif %}
        {% if 'm1000' in cat %}{% set titre = 'moteurs 1000kg' %}{% endif %}
        {% if 'm2000' in cat %}{% set titre = 'moteurs 2000kg' %}{% endif %}
        {% if 'mall' in cat %}{% set titre = 'moteurs' %}{% endif %}
        {% if 'sc400' in cat %}{% set titre = 'stop-chutes 400kg' %}{% endif %}
        {% if 'sc500' in cat %}{% set titre = 'stop-chutes 500kg' %}{% endif %}
        {% if 'sc1000' in cat %}{% set titre = 'stop-chutes 1000kg' %}{% endif %}
        {% if 'scall' in cat %}{% set titre = 'stop-chutes' %}{% endif %}
        <h1>Liste des certificats | <span class="badge badge-secondary">{{ files.count }}</span> {{ titre }}</h1>
        <p class="italic text-secondary">utilisez <kbd>ctrl</kbd>+<kbd>f</kbd> (Windows) ou <kbd>cmd</kbd>+<kbd>f</kbd> (mac) pour filtrer les r√©sultats</p>
    </div>
{% endblock %}

{% block moteurs_body %}
    <p></p>
    <div class="row">
        {% for file in files %}
            {% if 'm250' in file.realPath %}{% set rep = 'm250' %}
            {% elseif 'm500' in file.realPath %}{% set rep = 'm500' %}
            {% elseif 'm1000' in file.realPath %}{% set rep = 'm1000' %}
            {% elseif 'm2000' in file.realPath %}{% set rep = 'm2000' %}
            {% elseif 'sc400' in file.realPath %}{% set rep = 'sc400' %}
            {% elseif 'sc500' in file.realPath %}{% set rep = 'sc500' %}
            {% elseif 'sc1000' in file.realPath %}{% set rep = 'sc1000' %}
            {% endif %}

            <div class="col-2 card border-warning">
                <div class="card-header text-center text-muted">{{ file.Filename|trim('.png') }}</div>
                <img class="card-img-top" src="../../{{ file  }}" alt="Mince, pas d'image...">
                <div class="card-footer">
                    <div class = 'text-warning text-center'><a href="/certificats/{{ rep }}/{{ file.Filename|trim('.png') }}.pdf" target="_blank">PV</a> | {{ rep }} </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}